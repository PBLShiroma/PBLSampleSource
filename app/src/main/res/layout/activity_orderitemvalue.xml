<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/OrderItem_ItemIDItemName">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ItemName"
            android:id="@+id/OrderItem_ItemName"
            android:layout_weight="4"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="2"
            android:id="@+id/OrderItem_Osusume"
            android:textIsSelectable="false"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="2"
            android:id="@+id/OrderItem_Present"
            android:textIsSelectable="false"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ItemId"
            android:layout_weight="2"
            android:id="@+id/OrderItem_ItemId"
            android:textIsSelectable="false"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/OrderItem_PriceZaiko"
        android:layout_below="@+id/OrderItem_ItemIDItemName">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="単価："
            android:layout_weight="2"
            android:id="@+id/OrderItem_PriceTitle"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="right"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="9999円"
            android:layout_weight="3"
            android:id="@+id/OrderItem_Price"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="right"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="在庫："
            android:id="@+id/OrderItem_ZaikoTitle"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="right"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="9999個"
            android:id="@+id/OrderItem_Zaiko"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="right"/>

    </LinearLayout>
</LinearLayout>