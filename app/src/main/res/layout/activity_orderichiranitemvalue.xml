<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/OrderItem_ItemIDItemName">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ItemName"
            android:id="@+id/OrderIchiranItem_ItemName"
            android:layout_weight="7"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="注文新規"
            android:id="@+id/OrderIchiranItem_OrderStatus"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:gravity="right"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/OrderIchiranItem_OrderInfo1"
        android:layout_below="@+id/OrderItem_ItemIDItemName">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="注文日："
            android:id="@+id/OrderIchiranItem_OrderDateTitle"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:gravity="left"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2000/01/01"
            android:layout_weight="3"
            android:id="@+id/OrderIchiranItem_OrderDate"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:gravity="right"/>



        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="個数："
            android:id="@+id/OrderIchiranItem_KosuTitle"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:gravity="right"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="9999個"
            android:id="@+id/OrderIchiranItem_Kosu"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:gravity="right"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/OrderIchiranItem_OrderInfo2"
        android:layout_below="@+id/OrderIchiranItem_OrderInfo1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="単価："
            android:id="@+id/OrderIchiranItem_PriceTitle"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:gravity="left"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="9999円"
            android:layout_weight="3"
            android:id="@+id/OrderIchiranItem_Price"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:gravity="right"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="金額："
            android:id="@+id/OrderIchiranItem_kingakuTitle"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:gravity="right"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="9999円"
            android:id="@+id/OrderIchiranItem_kingaku"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:gravity="right"/>
    </LinearLayout>

</LinearLayout>